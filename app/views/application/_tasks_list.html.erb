<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Completed at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.completed_at %></td>
        <td><%= link_to "Show", task %></td>
        <td><%= link_to "Edit", edit_task_path(task) %></td>
        <td><%= link_to "Delete", task, method: :delete %></td>
        <td><%= link_to "Mark #{task.new_status}", toggle_completion_path(task), method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>
