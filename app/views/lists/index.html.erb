<p id="notice"><%= notice %></p>

<span class="header">To-Do Lists</span>
<%= link_to "Create New List", new_list_path %> |
<%= link_to "Create New Task", new_task_path %>

<div class="list-container">
  <% @lists.each do |list| %>
    <p>
    <span class="sub-header"><%= list.title %></span> 
      <%= link_to "Show", list %> |
      <%= link_to "Edit", edit_list_path(list) %> | 
      <%= link_to "Delete", list, method: :delete, data: { confirm: "Delete entire list?" } %> |
      <%= link_to "Add Task", add_task_path(list) %> |
      <%= link_to "Mark #{list.new_status}", toggle_complete_path(list), method: :put %>
      <%= render partial: "tasks_list", locals: { tasks: list.tasks } %>
    </p>
  <% end %>
</div>

<div class="list-container">
  <% if @misc_tasks.present? %>
    <span class="sub-header">Miscellaneous Tasks</span>
    <%= render partial: "tasks_list", locals: { tasks: @misc_tasks } %>
  <% end %>
</div>

<br>

