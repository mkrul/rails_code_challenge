<h1>Add Task</h1>

<%= form_with(model: @task, local: true) do |form| %>
  <div class="field">
    <strong>List: </strong><%= @list.title %>
    <%= form.hidden_field :list_id, value: @list.id %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
